<p id="notice"><%= notice %></p>

<h1>Listing Expirations</h1>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>User</th>
      <th>Expires at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expirations.each do |expiration| %>
      <tr>
        <td><%= expiration.food %></td>
        <td><%= expiration.user %></td>
        <td><%= expiration.expires_at %></td>
        <td><%= link_to 'Show', expiration %></td>
        <td><%= link_to 'Edit', edit_expiration_path(expiration) %></td>
        <td><%= link_to 'Destroy', expiration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

