    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Fridge", food_categories_path %></li>
        <li><%= link_to "Recipes", recipe_ingredient_path %></li>
