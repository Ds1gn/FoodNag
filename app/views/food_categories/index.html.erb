
<div class="container-fridge">
  <div class="row">
    <div class="col-sm-2 col-sm-offset-5">
        <p class="button">
          <%= image_tag "fridge.png", class: 'fridge img-responsive' %>
        </p>
    </div>
    <div class="col-sm-12">
        <span>Click fridge to add items.</span>
    </div>
  </div>





  <ul class="purchase_list">
      <% @purchases.each do |p| %>
        <li><hr>
          <%= p.food.name || "None" %>
          <%= link_to purchase_path(p), class: "fa fa-trash", method: :delete do %>
          <% end %>
        </li>
      <% end %>
  </ul>





<section class="open">
    <div class="nav-cat">
      <div>
        <p class="button">
          <i style="" class="fa fa-arrow-left fa-3x">Close</i>
        </p>
      </div>
      <div class="bs-example">
        <% @food_categories.each do |fc| %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" style="color:black;font-family: 'Oswald'; font-size:45px;" href="#<%= dom_id fc%>"><%= fc.name %></a>
                </h4>
            </div>
            <div id="<%= dom_id fc%>" class="panel-collapse collapse">
              <% fc.foods.each do |f| %>
                <div class="panel-body">
                  <span class="add_food" style="color:black;cursor:pointer;font-family: 'Oswald'; font-size:35px;" data-food-name="<%= f.name %>" data-food-id="<%= f.id %>"><%= f.name %></span>
                </div>
                <% end %>
            </div>
        </div>
        <% end %>
      </div>
    </div>
</section>









